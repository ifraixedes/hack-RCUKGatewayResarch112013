{
    "name": "__MSG_appName__",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "http://gtr.rcuk.ac.uk/*"
    ],
    "content_scripts": [ 
        {
            "matches": ["http://gtr.rcuk.ac.uk/*"],
            "js": ["/scripts/api.js", "/scripts/app.js"]  
        }
    ],
    "web_accessible_resources": [
    ]
}
